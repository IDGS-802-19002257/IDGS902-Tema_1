@model WebApplication2.Models.Triangulos

@{
    ViewBag.Title = "Index";
}

<h2>Triángulo</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="form">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Punto</th>
                                <th scope="col">X</th>
                                <th scope="col">Y</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">A</th>
                                <td>
                                    @Html.EditorFor(model => model.ax, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ay, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">B</th>
                                <td>
                                    @Html.EditorFor(model => model.bx, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.by, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">C</th>
                                <td>
                                    @Html.EditorFor(model => model.cx, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.cy, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" name="name" value="Calcular" class="btn btn-info mt-3" />
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                @if (@ViewBag.esTriangulo != null)
                {
                    if (@ViewBag.esTriangulo)
                    {
                        <h1>Este triángulo es @ViewBag.tipo</h1>
                        <h2>Perímetro: @ViewBag.perimetro</h2>
                        <h2>Área: @ViewBag.area</h2>
                    }
                    else
                    {
                        <h1>No es un triángulo</h1>
                    }
                }
            </div>
        </div>
    </div>

    

}